
{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "dist", // Default output directory
    "rootDir": "src"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}